<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    >

    <data>

        <variable
            name="result"
            type="com.sinyuk.yukdaily.entity.Gank.GankResult"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="@dimen/content_space_8">

        <ViewStub
            android:id="@+id/androidStub"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/content_space_8"
            android:layout="@layout/gank_item_layout"/>

        <ViewStub
            android:id="@+id/iosStub"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/content_space_8"
            android:layout="@layout/gank_item_layout"/>


        <ViewStub
            android:id="@+id/frontEndStub"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/content_space_8"
            android:layout="@layout/gank_item_layout"/>

        <ViewStub
            android:id="@+id/plusStub"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/content_space_8"
            android:layout="@layout/gank_item_layout"/>
    </LinearLayout>

</layout>