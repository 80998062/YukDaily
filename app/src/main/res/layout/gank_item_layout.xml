<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <data>

        <import type="com.sinyuk.yukdaily.entity.Gank.GankData"/>
        <import type="java.util.List"/>

        <variable
            name="icon"
            type="Integer"/>

        <variable
            name="dataset"
            type="List&lt;GankData&gt;"/>
    </data>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/content_space_4"
        android:layout_marginLeft="@dimen/content_space_8"
        android:layout_marginRight="@dimen/content_space_8"
        android:layout_marginTop="@dimen/content_space_4"
        app:cardBackgroundColor="#fff"
        app:cardCornerRadius="@dimen/cardView_default_corner_radius"
        app:cardElevation="@dimen/cardView_default_elevation"
        app:contentPadding="@dimen/content_space_8">

        <com.sinyuk.yukdaily.entity.Gank.GankItemLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:dataset="@{dataset}">

            <com.sinyuk.yukdaily.widgets.MyCircleImageView
                android:id="@+id/type"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="end"
                app:res="@{icon}"
                app:border_color="@android:color/transparent"
                app:border_width="0dp"/>
        </com.sinyuk.yukdaily.entity.Gank.GankItemLayout>

    </android.support.v7.widget.CardView>
</layout>