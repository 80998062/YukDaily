<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.sinyuk.yukdaily.entity.Gank.GankData"/>

        <import type="java.util.List"/>


        <variable
            name="gankData"
            type="List&lt;GankData&gt;"/>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/content_space_8"
        android:layout_marginLeft="@dimen/content_space_8"
        android:layout_marginRight="@dimen/content_space_8"
        android:orientation="vertical">


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="64dp"
            app:cardCornerRadius="@dimen/cardView_default_corner_radius"
            app:cardElevation="@dimen/cardView_default_elevation"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="@dimen/content_space_16"
                android:paddingRight="@dimen/content_space_16"
                android:paddingTop="@dimen/content_space_8">

                <ImageView
                    android:id="@+id/type"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:scaleType="centerInside"
                    tools:src="@drawable/ic_android"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@drawable/divider"
                    android:dividerPadding="@dimen/content_space_16"
                    android:orientation="vertical"
                    android:showDividers="middle"
                    app:gankData="@{gankData}">
                </LinearLayout>
            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>
</layout>