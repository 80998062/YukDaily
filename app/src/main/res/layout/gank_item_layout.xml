    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/content_space_8"
            android:layout_marginRight="@dimen/content_space_8"
            android:minHeight="64dp"
            app:cardCornerRadius="@dimen/cardView_default_corner_radius"
            app:cardElevation="@dimen/cardView_default_elevation"
            app:cardUseCompatPadding="true">

            <com.sinyuk.yukdaily.entity.Gank.GankItemLayout
                android:id="@+id/content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@drawable/divider"
                android:dividerPadding="@dimen/content_space_8"
                android:orientation="vertical"
                android:showDividers="middle">
            </com.sinyuk.yukdaily.entity.Gank.GankItemLayout>
        </android.support.v7.widget.CardView>

        <com.sinyuk.yukdaily.widgets.MyCircleImageView
            android:id="@+id/type"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="end"
            android:layout_marginRight="@dimen/content_space_16"
            android:layout_marginTop="@dimen/content_space_4"
            app:border_color="@android:color/transparent"
            app:border_width="0dp"/>
    </LinearLayout>
</layout>