<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/type"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_gravity="start"
            android:layout_marginLeft="26dp"
            android:layout_marginTop="@dimen/content_space_8"/>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/content_space_8"
            android:layout_marginRight="@dimen/content_space_8"
            android:minHeight="64dp"
            app:cardCornerRadius="@dimen/cardView_default_corner_radius"
            app:cardElevation="@dimen/cardView_default_elevation"
            app:cardUseCompatPadding="true">

            <com.sinyuk.yukdaily.entity.Gank.GankItemLayout
                android:id="@+id/content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@drawable/divider"
                android:dividerPadding="@dimen/content_space_16"
                android:orientation="vertical"
                android:showDividers="middle">
            </com.sinyuk.yukdaily.entity.Gank.GankItemLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>
</layout>