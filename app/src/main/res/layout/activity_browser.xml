<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="news"
            type="com.sinyuk.yukdaily.entity.news.News"/>
    </data>

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:overScrollMode="never"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <WebView
                    android:id="@+id/webView"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:scrollbarStyle="outsideOverlay"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:gravity="bottom"
                    android:text="placeholder"/>
            </LinearLayout>

        </android.support.v4.widget.NestedScrollView>

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.design.widget.CollapsingToolbarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="?attr/actionBarSize"
                app:contentScrim="@color/colorPrimary"
                app:layout_scrollFlags="snap|scroll|enterAlways|enterAlwaysCollapsed"
                app:titleEnabled="false">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.sinyuk.yukdaily.widgets.RatioImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scaleType="centerCrop"
                        app:imageHOverW="0.618"
                        app:imageUrl="@{news.image}"
                        tools:src="@drawable/backdrop1"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:orientation="vertical"
                        android:paddingBottom="@dimen/content_space_8"
                        android:paddingLeft="@dimen/content_space_16"
                        android:paddingRight="@dimen/content_space_16"
                        android:paddingTop="@dimen/content_space_8">

                        <TextView
                            style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxLines="3"
                            android:shadowColor="@color/text_shadow"
                            android:shadowDx="1"
                            android:shadowDy="0.5"
                            android:text="@{news.title}"
                            android:textColor="@android:color/white"
                            tools:text="title"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:layout_marginTop="@dimen/content_space_4"
                            android:shadowColor="@color/text_shadow"
                            android:shadowDx="0.5"
                            android:shadowDy="0.5"
                            android:text="@{news.imageSource}"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/material_text_caption2"
                            tools:text="bilibili"/>
                    </LinearLayout>
                </FrameLayout>

                <android.support.v7.widget.Toolbar
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:background="@null"
                    app:contentInsetStart="0dp"
                    app:layout_collapseMode="pin">

                    <ImageView
                        style="@style/toolbar_button"
                        android:onClick="onClose"
                        android:src="@drawable/ic_back"/>
                </android.support.v7.widget.Toolbar>
            </android.support.design.widget.CollapsingToolbarLayout>
        </android.support.design.widget.AppBarLayout>
    </android.support.design.widget.CoordinatorLayout>
</layout>
