        <item name="cardElevation">@dimen/cardView_default_elevation</item>
        <item name="cardCornerRadius">0dp</item>
    </style>

    <dimen name="header_card_padding">56dp</dimen>


    <style name="gank_author">
        <item name="android:textSize">@dimen/material_text_caption2</item>
        <item name="android:textColor">@color/text_primary_dark</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="gank_date">
        <item name="android:textSize">@dimen/material_text_caption1</item>
        <item name="android:textColor">@color/text_secondary_dark</item>
